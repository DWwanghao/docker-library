# This file is generated by the template.

REGISTRY        ?=lcr.loongnix.cn
ORGANIZATION    ?=osixia
REPOSITORY      ?=keepalived
TAG             ?=release/2.1.5
LATEST          ?=false

IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):release-2.1.5-dev
LATEST_IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):latest

default: image
SOURCE=keepalived
PATCH=docker.patch
SOURCE_URL=https://github.com/osixia/docker-keepalived.git
image: src/$(SOURCE)
	cp net.patch install-service src/$(SOURCE)/image/
	$(MAKE) -C src/$(SOURCE)
src/$(SOURCE):
	git clone -b $(TAG) --depth=1 $(SOURCE_URL) $@
	cd $@ && git apply ../../$(PATCH)
clean:
	rm -rf src 
push:
	docker push $(IMAGE)
	#latest image
	@if [ $(LATEST) = "true" ]; \
                then \
                docker tag $(IMAGE) $(LATEST_IMAGE); \
                docker push $(LATEST_IMAGE); \
        fi

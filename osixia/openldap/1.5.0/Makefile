docker-openldap:
	git clone -b v1.5.0  https://github.com/osixia/docker-openldap.git
clean: 
	rm -rf openldap  docker-openldap
push:
	docker push $(IMAGE)
	#latest image
	@if [ $(LATEST) = "true" ]; \
		then \
		docker tag $(IMAGE) $(LATEST_IMAGE); \
		docker push $(LATEST_IMAGE); \
	fi

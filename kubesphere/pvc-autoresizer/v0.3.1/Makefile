src:
	git clone --depth 1 -b v0.3.1 https://github.com/kubesphere/pvc-autoresizer.git && cd pvc-autoresizer  && git apply ../0001-pvc-autoresizer-add-loong64.patch

image: src
	cd pvc-autoresizer  && make docker-build
push:
	docker push $(IMAGE)
	#latest image
	@if [ $(LATEST) = "true" ]; \
		then \
		docker tag $(IMAGE) $(LATEST_IMAGE); \
		docker push $(LATEST_IMAGE); \
	fi

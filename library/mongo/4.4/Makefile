# This file is generated by the template.

REGISTRY	?=lcr.loongnix.cn
ORGANIZATION	?=library
REPOSITORY	?=mongo
TAG		?=4.4
LATEST		?=true

IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):$(TAG)
LATEST_IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):latest

default: image

image: download
	docker build \
		--build-arg http_proxy=$(http_proxy) \
		--build-arg https_proxy=$(https_proxy) \
		-t $(IMAGE) \
		.

download: mongo-4.4.29-bin

mongo-4.4.29-bin:
	wget https://github.com/Loongson-Cloud-Community/mongo/releases/download/r4.4.29/mongo-4.4.29-bin.tar.gz
	tar -xf mongo-4.4.29-bin.tar.gz
	rm -rf mongo-4.4.29-bin.tar.gz
push:
	docker push $(IMAGE)
	#latest image
	@if [ $(LATEST) = "true" ]; \
		then \
		docker tag $(IMAGE) $(LATEST_IMAGE); \
		docker push $(LATEST_IMAGE); \
	fi

clean:
	rm -rf mongo-4.4.29-bin

	wget http://cloud.loongnix.cn/releases/loongarch64/kubevirt/cdi-apiserver/1.52.0/cdi-apiserver
	chmod +x cdi-apiserver

image: download
	docker build \
		-t $(IMAGE) \
		.

push:
	docker push $(IMAGE)
	#latest image
	@if [ $(LATEST) = "true" ]; \
		then \
		docker tag $(IMAGE) $(LATEST_IMAGE); \
		docker push $(LATEST_IMAGE); \
	fi

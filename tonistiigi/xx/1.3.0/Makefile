ORGANIZATION	?=tonistiigi
REPOSITORY	?=xx
TAG		?=1.3.0
LATEST		?=true

IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):$(TAG)
LATEST_IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):latest
GIT_URL=https://github.com/Loongson-Cloud-Community/xx.git

default: image

src:
	git clone -b loong64-1.3.0 $(GIT_URL) $@

image: src
	cd src/src/ && docker buildx bake -f docker-bake.dev.hcl

push:
	docker push $(IMAGE)
	#latest image
	@if [ $(LATEST) = "true" ]; \
		then \
		docker tag $(IMAGE) $(LATEST_IMAGE); \
		docker push $(LATEST_IMAGE); \
	fi

clean:
	rm -rf src

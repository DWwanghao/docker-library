# This file is generated by the template.

REGISTRY	?=lcr.loongnix.cn
ORGANIZATION	?=weaviate
REPOSITORY	?=weaviate
TAG		?=1.19.0
LATEST		?=false

IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):$(TAG)
LATEST_IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):latest
SOURCE_URL=https://github.com/weaviate/weaviate.git

default: image

.PHONY: src image push clean

src:
	git clone --quiet -b $(TAG) --single-branch $(SOURCE_URL)

image: src
	pushd weaviate && \
        git apply ../weaviate-1.19.0.patch && \
	cp ../bolt_loong64.go . && \
	docker build -t $(IMAGE) . && \
        popd

push:
	docker push $(IMAGE)
	#latest image
	@if [ $(LATEST) = "true" ]; \
		then \
		docker tag $(IMAGE) $(LATEST_IMAGE); \
		docker push $(LATEST_IMAGE); \
	fi

clean:
	rm -rf weaviate

REGISTRY	?=lcr.loongnix.cn
ORGANIZATION	?=helm
REPOSITORY	?=helm
TAG		?=3.0.0
LATEST		?=false

IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):$(TAG)
LATEST_IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):latest

default: image
SOURCE=helm
PATCH=0001-support-loongarch.patch
SOURCE_URL=https://github.com/helm/helm.git
image: src/$(SOURCE)
	$(MAKE) -C src/$(SOURCE) all
	docker build -t $(IMAGE) .	
src/$(SOURCE):
	git clone -b v$(TAG) $(SOURCE_URL) $@
	cd $@ && git apply ../../$(PATCH)	
push:
	docker push $(IMAGE)
	#latest image
	@if [ $(LATEST) = "true" ]; \
		then \
		docker tag $(IMAGE) $(LATEST_IMAGE); \
		docker push $(LATEST_IMAGE); \
	fi

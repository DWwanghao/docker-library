# This file is generated by the template.

REGISTRY	?=lcr.loongnix.cn
ORGANIZATION	?=langgenius
REPOSITORY	?=dify-api
TAG		?=1.0.1
LATEST		?=false

IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):$(TAG)
LATEST_IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):latest
SOURCE_URL=https://github.com/langgenius/dify.git

default: image

.PHONY: src image push clean

src:
	git clone --quiet -b $(TAG) --single-branch $(SOURCE_URL)

image: src
	pushd dify/api && \
        git apply ../../dify-api-Dockerfile-1.0.1.patch && \
        git apply ../../dify-api-poetry.lock-1.0.1.patch && \
        git apply ../../dify-api-pyproject.toml-1.0.1.patch && \
	docker build --build-arg COMMIT_SHA=46036e6ce61d55ff8265aba63412bc97532285f8 -t $(IMAGE) . && \
        popd

push:
	docker push $(IMAGE)
	#latest image
	@if [ $(LATEST) = "true" ]; \
		then \
		docker tag $(IMAGE) $(LATEST_IMAGE); \
		docker push $(LATEST_IMAGE); \
	fi

clean:
	rm -rf dify

# This file is generated by the template.

REGISTRY	?=lcr.loongnix.cn
ORGANIZATION	?=langgenius
REPOSITORY	?=dify-plugin-daemon
TAG		?=0.0.4
LATEST		?=false

IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):$(TAG)
LATEST_IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):latest
SOURCE_URL=https://github.com/langgenius/dify-plugin-daemon.git

default: image

.PHONY: src image push clean

src:
	git clone --quiet -b $(TAG) --single-branch $(SOURCE_URL)

image: src
	pushd dify-plugin-daemon && \
        git apply ../dify-plugin-daemon-0.0.4.patch && \
	docker build -t $(IMAGE) -f docker/local.dockerfile . && \
        popd

push:
	docker push $(IMAGE)
	#latest image
	@if [ $(LATEST) = "true" ]; \
		then \
		docker tag $(IMAGE) $(LATEST_IMAGE); \
		docker push $(LATEST_IMAGE); \
	fi

clean:
	rm -rf dify-plugin-daemon

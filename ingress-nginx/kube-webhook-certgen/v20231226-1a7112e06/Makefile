REGISTRY	?=lcr.loongnix.cn
ORGANIZATION	?=ingress-nginx
REPOSITORY	?=kube-webhook-certgen
TAG		?=v20231226-1a7112e06
LATEST		?=true

IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):$(TAG)
LATEST_IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):latest
SOURCE_URL=https://github.com/kubernetes/ingress-nginx.git
SOURCE=$(shell echo $(SOURCE_URL) | awk -F '/' '{print $$NF}' | awk -F '.' '{print $$1}')
SOURCE_TAG=$(shell echo $(TAG) | awk -F '-' '{print $$2}')
PATCH=0001-port-to-loong64.patch

default: image



image: src/$(SOURCE)
	$(MAKE) -C $</images/$(REPOSITORY)

src/$(SOURCE):
	git clone $(SOURCE_URL) $@
	cd $@ && \
		git checkout $(SOURCE_TAG) &&\
		git apply ../../$(PATCH)

push:
	docker push $(IMAGE)
	#latest image
	@if [ $(LATEST) = "true" ]; \
		then \
		docker tag $(IMAGE) $(LATEST_IMAGE); \
		docker push $(LATEST_IMAGE); \
	fi

clean: 
	rm -rf src
